@model IEnumerable<eActivities.Models.Category>

@{
    ViewData["Title"] = "Index";
}

<h1 class="alert alert-info">Categories</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">New Caregory</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Category Name
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CategoryName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
