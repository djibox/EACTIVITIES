@model eActivities.Models.DayTask

@{
    ViewData["Title"] = "Create";
}

<h1 class="alert alert-info">Create Task</h1>

<hr />

    <div class="mb-3">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="TaskAction" class="control-label"></label>
                <textarea asp-for="TaskAction" class="form-control form-control-lg"></textarea>
                <span asp-validation-for="TaskAction" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ResponsibleManagerId" class="control-label">Responsible Manager</label>
                <select asp-for="ResponsibleManagerId" class ="form-control" asp-items="ViewBag.ResponsibleManagerId"></select>
            </div>
            <div class="form-group">
                <label asp-for="StatusTrackerId" class="control-label">Status</label>
                <select asp-for="StatusTrackerId" class ="form-control" asp-items="ViewBag.StatusTrackerId"></select>
            </div>
            <div class="form-group">
                <label asp-for="InitialTargetDate" class="control-label">Initial Target Date</label>
                <input asp-for="InitialTargetDate" class="form-control" />
                <span asp-validation-for="InitialTargetDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RevisedDate" class="control-label">Revised Date</label>
                <input asp-for="RevisedDate" class="form-control" />
                <span asp-validation-for="RevisedDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Comments" class="control-label"></label>
                <textarea asp-for="Comments" class="form-control"></textarea>
                <span asp-validation-for="Comments" class="text-danger"></span>
            </div>
            <hr />
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
